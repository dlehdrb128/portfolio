@tailwind base;
@tailwind components;
@tailwind utilities;

@layer utilities {
    .scrollbar::-webkit-scrollbar {
        width: 20px;
        height: 20px;
    }

    .scrollbar::-webkit-scrollbar-track {
        border-radius: 100vh;
        background: white;
    }

    .scrollbar::-webkit-scrollbar-thumb {
        background: #f0f6fb;
        border-radius: 100vh;
        border: 3px solid white;
    }

    .scrollbar::-webkit-scrollbar-thumb:hover {
        background: white;
    }
}
